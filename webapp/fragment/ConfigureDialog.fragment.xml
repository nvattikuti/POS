<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog id="CreateDialog" title="Enter Connection Details">
	    <content>
	            <sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="__form4">
	            <sap.ui.layout.form:formContainers>
	                <sap.ui.layout.form:FormContainer title="" id="__container4">
	                    <sap.ui.layout.form:formElements>
	                        <sap.ui.layout.form:FormElement id="__element5">
	                            <sap.ui.layout.form:fields>
	                                <Input width="100%" id="hostAddress" placeholder="Backend Address"/>
	                            </sap.ui.layout.form:fields>
	                        </sap.ui.layout.form:FormElement>
	                        <sap.ui.layout.form:FormElement id="__element6">
	                            <sap.ui.layout.form:fields>
	                                <Input width="100%" id="hostClientID" placeholder="Client ID" type="Number"/>
	                            </sap.ui.layout.form:fields>
	                        </sap.ui.layout.form:FormElement>
	                        <sap.ui.layout.form:FormElement id="__element7">
	                            <sap.ui.layout.form:fields>
	                                <Input width="100%" id="hostUsername" placeholder="Username" />
	                            </sap.ui.layout.form:fields>
	                        </sap.ui.layout.form:FormElement>
	                        <sap.ui.layout.form:FormElement id="__element8">
	                            <sap.ui.layout.form:fields>
	                                <Input width="100%" id="hostPassword" placeholder="Password" type="Password"/>
	                            </sap.ui.layout.form:fields>
	                        </sap.ui.layout.form:FormElement>
	                    </sap.ui.layout.form:formElements>
	                </sap.ui.layout.form:FormContainer>
	            </sap.ui.layout.form:formContainers>
	            <sap.ui.layout.form:layout>
	                <sap.ui.layout.form:ResponsiveGridLayout id="__layout3"/>
	            </sap.ui.layout.form:layout>
	        </sap.ui.layout.form:Form>
	        <HBox class="connectivityDialogSubmit">
	        	<Button id="_btnSubmit" class="btn-submit" text="{i18n>save}" press="submitDialog"/>
	        	<Button id="_btnCancel" class="" text="Cancel" press="closeDialog"/>
	        </HBox>
	    </content>
	</Dialog>
</core:FragmentDefinition>