<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="PosClient.controller.Login" displayBlock="true">
	<App id="V_Root">
		<pages>
			<Page class="pageContainer" title="{i18n>title}">
				<content>
					<VBox direction="Column" id="__vbox0" class="loginMainContainer">
						<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="__form0">
				        <sap.ui.layout.form:formContainers>
				            <sap.ui.layout.form:FormContainer id="__container0">
				                <sap.ui.layout.form:formElements>
				                    <sap.ui.layout.form:FormElement id="__element0">
				                        <sap.ui.layout.form:fields>
				                            <Input width="100%" id="__input0" placeholder="{i18n>loginUserPlaceholder}"/>
				                        </sap.ui.layout.form:fields>
				                    </sap.ui.layout.form:FormElement>
				                    <sap.ui.layout.form:FormElement id="__element1">
				                        <sap.ui.layout.form:fields>
				                            <Input width="100%" id="__input1" placeholder="{i18n>loginPasswordPlaceholder}" type="Password"/>
				                        </sap.ui.layout.form:fields>
				                    </sap.ui.layout.form:FormElement>
				                </sap.ui.layout.form:formElements>
				            </sap.ui.layout.form:FormContainer>
				        </sap.ui.layout.form:formContainers>
				        <sap.ui.layout.form:layout>
				            <sap.ui.layout.form:ResponsiveGridLayout id="__layout0"/>
				        </sap.ui.layout.form:layout></sap.ui.layout.form:Form>
				        <VBox direction="Column" id="__vbox1" class="loginActionBox">
				        	<Button text="{i18n>logOnBtnText}" class="logOnBtn" id="__button0" press="onLogin"/>
				        	<Button text="{i18n>changePwdBtnText}" class="changePwdBtn" id="__button1"/>
				        </VBox>
					</VBox>
				</content>
				<headerContent>
				    <mvc:XMLView viewName="PosClient.view.LanguageBox"/>
				</headerContent>
			</Page>
		</pages>
	</App>
</mvc:View>