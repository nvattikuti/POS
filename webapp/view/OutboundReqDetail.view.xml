<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.f" controllerName="PosClient.controller.OutboundReqDetail" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>CreateOutbound}">
				<subHeader>
					<Toolbar>
						<Bar>
							<contentMiddle>
								<mvc:XMLView viewName="PosClient.view.HeaderActions"/>
							</contentMiddle>
							<contentRight></contentRight>
						</Bar>
					</Toolbar>
				</subHeader>
				<content>
					<f:DynamicPage headerExpanded="{/headerExpanded}">
						<f:title>
							<f:DynamicPageTitle>
								<f:actions>
									<ToolbarSpacer/>
								</f:actions>
							</f:DynamicPageTitle>
						</f:title>
						<f:header>
							<f:DynamicPageHeader pinnable="true">
								<f:content>
									<HBox width="100%" id="__hbox0" class="headerActions">
										<items>
											<Label text="{i18n>ExtDocNumber}"/>
											<Input id="Xblnr" maxLength="30"></Input>
											<Label text="{i18n>Plant}"/>
											<Input id="Werks" editable="false"/>
											<Label text="{i18n>Operator}"/>
											<Input id="UserId" editable="false"/>
										</items>
									</HBox>
								</f:content>
							</f:DynamicPageHeader>
						</f:header>
						<f:content>
							<Table id="TableCreateId" class="posBlueTbl" inset="false" mode="Delete" delete="OnPOSDelete" items="{OutboundItemModel>/}">
								<headerToolbar>
									<Toolbar design="Transparent" height="3rem">
										<ToolbarSpacer/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://add" press="OnAdd"/>
									</Toolbar>
								</headerToolbar>
								<columns>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="{i18n>PosItem}"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="{i18n>productID}"/>
									</Column>
									<Column minScreenWidth="Tablet" visible="false" demandPopin="true">
										<Text text="{i18n>Description}"/>
									</Column>
									<!--<Column minScreenWidth="Tablet" demandPopin="true">-->
									<!--	<Text text="{i18n>PostingDate}"/>-->
									<!--</Column>-->
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="{i18n>Quantity}"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="{i18n>UoM}"/>
									</Column>
									<Column minScreenWidth="Tablet" visible="false" demandPopin="true">
										<Text text="{i18n>StorageLocation}"/>
									</Column>
									<Column minScreenWidth="Tablet" visible="false" demandPopin="true">
										<Text text="{i18n>ReceivingStorLoc}"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="{i18n>ReceivingPlant}"/>
									</Column>									
									<!--<Column minScreenWidth="Tablet" demandPopin="true">-->
									<!--	<Text text="{i18n>Plant}"/>-->
									<!--</Column>-->
								</columns>
								<items>
									<ColumnListItem vAlign="Middle">
										<cells>
											<Text text="{OutboundItemModel>zeile}"></Text>
											<!--<Text text="{OutboundItemModel>xblnr_mkpf}"/>-->
											<Input id="MaktxId" value="{OutboundItemModel>maktx}" editable="{OutboundItemModel>Editable}" suggestionItems="{ path: 'listModel>/items'}"
												suggestionItemSelected="OnSugestionItemSelected" showSuggestion="true" showValueHelp="true" valueHelpRequest="onProducIdValueHelp">
												<suggestionItems>
													<core:ListItem text="{listModel>productID} {listModel>productDescription}" key="{listModel>productID}"/>
													<!--<core:Item text="{listModel>productID} {listModel>productDescription}" key="{listModel>productID}"/>-->
												</suggestionItems>
											</Input>
											<Text visible="false" id="MatnrId" text="{OutboundItemModel>matnr}"></Text>
											<Input value="{OutboundItemModel>menge}" editable="{OutboundItemModel>Editable}" type="Number"/>
											<Input id="MeinsId" editable="false" value="{OutboundItemModel>meins}"/>
											<Input id="LgortId"   maxLength="4" value="{OutboundItemModel>lgort}"/>
											<Input id="RecLgortId"  maxLength="4" value="{OutboundItemModel>reclgort}"/>
											<Input id="RecPlantId" maxLength="4" value="{OutboundItemModel>recplant}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</f:content>
						<!--  DynamicPage Footer  -->
					</f:DynamicPage>
				</content>
				<footer>
					<Bar>
						<contentLeft>
							<core:Fragment fragmentName="PosClient.fragment.PosReqFooterBar" type="XML"/>
						</contentLeft>
						<contentRight>
							<Button id="CancelBtnId" type="Reject" press="OnCancel" text="{i18n>Cancel}"/>
							<Button id="SaveBtnId" type="Accept" press="OnSave" text="{i18n>Save}"/>
							<Button id="DraftBtnId" type="Emphasized" press="OnDraftSave" text="{i18n>SaveDraft}"/>
						</contentRight>
					</Bar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>