<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:semantic="sap.m.semantic"
	xmlns:html="http://www.w3.org/1999/xhtml" controllerName="PosClient.controller.OutboundReqMaster">
	<semantic:MasterPage id="page" title="{i18n>OutboundDrafts}" navButtonPress="onBackLaunchpad" 
	showNavButton="true" showFooter="true">
		<semantic:content>
			<SearchField liveChange="onLiveChange" width="100%" search="onSearch"/>
			<List items="{OutboundHdrModel>/}">
				<items>
					<ObjectListItem title="{i18n>ExtDocNumber}:{OutboundHdrModel>xblnr_mkpf}" type="Active" press="onListItemPress" intro="{OutboundHdrModel>budat_mkpf}">
						<attributes>
							<ObjectAttribute text="{OutboundHdrModel>werks}"/>
						</attributes>
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>
		<semantic:customFooterContent>
			<Button icon="sap-icon://Add" text="{i18n>CreateOutbound}" press="OnAdd"/>
		</semantic:customFooterContent>
	</semantic:MasterPage>
</mvc:View>