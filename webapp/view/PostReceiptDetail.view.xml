						</firstStatus>
						<attributes>
							<!--<ObjectAttribute text="Document Date: {postReceiptModel>/erdat}"/>-->
							<ObjectAttribute text="Delivery Type: {postReceiptModel>/lfart}"/>
							<ObjectAttribute text="Delivery Date: {postReceiptModel>/budat}"/>
							<!--<ObjectAttribute text="Shipping Point: {postReceiptModel>/vstel}"/>-->
						</attributes>
					</ObjectListItem>
					<IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
