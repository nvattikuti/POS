									<Text text="{PostReceiptDetailModel>lfimg}"/>
									<Input value="{PostReceiptDetailModel>menge}"/>
									<Text text="{PostReceiptDetailModel>meins}"/>
									<Select selectedKey="{PostReceiptDetailModel>lgort}" width="100%">
										<core:Item key="1000" text="1000"/>
									</Select>
									<Text text="{PostReceiptDetailModel>vgbel}"/>
									<Text text="{PostReceiptDetailModel>vgpos}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer>
					<Bar>
						<contentLeft>
							<core:Fragment fragmentName="PosClient.fragment.PosReqFooterBar" type="XML"/>
						</contentLeft>
						<contentRight>
							<Button type="Accept" press="OnSave" text="{i18n>Save}"/>
						</contentRight>
					</Bar>
				</footer>
			</Page>
