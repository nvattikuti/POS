				</firstStatus>
				<attributes>
					<!--<ObjectAttribute text="Document Date: {inboundModel>/erdat}"/>-->
					<ObjectAttribute text="Delivery Type: {inboundModel>/lfart}"/>
					<ObjectAttribute text="Delivery Date: {inboundModel>/budat}"/>
