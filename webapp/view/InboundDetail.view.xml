<!--<Text text="{salesShipToModel>/post_code} / {salesShipToModel>/city}"/>-->

<!--								<Text text="{inboundModel>/ship_post} / {inboundModel>/ship_city}"/>-->
<!--								<Label text="{i18n>country}"/>-->
<!--								 <Text text="{salesShipToModel>/country}"/> -->
<!--								<Text text="{inboundModel>/ship_country}"/>-->
<!--							</f:content>-->
<!--						</f:SimpleForm>-->
<!--					</IconTabFilter>-->
					<IconTabFilter icon="sap-icon://person-placeholder">
						<f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="{i18n>processorInformation}" >
							<f:content>
								<core:Title text="{i18n>details}"/>
								<Label text="{i18n>name}"/>
								<Text text="{storeUserModel>/fname} {storeUserModel>/lname}"/>
								<Label text="{i18n>employeeID}"/>
								<Text text="{storeUserModel>/werks}"/>
								<Label text="{i18n>jobTitle}"/>
								<Text text="{storeUserModel>/job}"/>
								<Label text="{i18n>phone}"/>
								<Text text="{storeUserModel>/mob_number}"/>
							</f:content>
						</f:SimpleForm>
					</IconTabFilter>
				</items>
			</IconTabBar>
			<Toolbar>
				<Title text="{i18n>lineItems}" titleStyle="H4" class="sapUiSmallMarginBegin"/>
			</Toolbar>
			<Table class="posBlueTbl" inset="false" items="{ path: 'inboundDetailModel>/items' }">
				<columns>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>DeliveryItem}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>product}"/>
					</Column>	
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>Description}"/>
					</Column>						
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>quantity}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>unit}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>ReferencePO}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>RefPOItem}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<Text text="{inboundDetailModel>posnr}"/>
							<Text text="{inboundDetailModel>matnr}"/>
							<Text text="{inboundDetailModel>arktx}"/>
							<Input value="{inboundDetailModel>lfimg}"/>
							<Text text="{inboundDetailModel>meins}"/>
							<Text text="{inboundDetailModel>vgbel}"/>
							<Text text="{inboundDetailModel>vgpos}"/>
						</cells>
					</ColumnListItem>
				</items>
